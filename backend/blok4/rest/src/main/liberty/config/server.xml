<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <!-- Enable features -->
    <featureManager>
        <feature>jakartaee-10.0</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443"/>

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <!-- Prevent NO_USER_REGISTRY error -->
    <basicRegistry id="basic" realm="dummyRealm"/>

    <!-- MySQL for production -->
    <library id="MySQLLib">
        <fileset dir="${shared.resource.dir}/" includes="mysql*.jar"/>
    </library>

    <dataSource id="DefaultDataSource" jndiName="jdbc/MySQL">
        <jdbcDriver libraryRef="MySQLLib"/>
        <properties useSSL="false" serverName="localhost" portNumber="3306" databaseName="restdemo" user="root" password="root" serverTimezone="UTC"/>
    </dataSource>
</server>
